---
layout: default
---

{%- assign entry = site.bibliography | where: "key", page.key | first -%}

{% capture head_extra %}
  {% if entry %}
    <meta name="citation_title" content="{{ entry.title }}">
    {% for author in entry.author_array %}
      <meta name="citation_author" content="{{ author.last }}, {{ author.first }}">
    {% endfor %}
    <meta name="citation_conference_title" content="{{ entry.booktitle }}">
    <meta name="citation_publication_date" content="{{ entry.year }}-01-01">
    <meta name="citation_pdf_url" content="{{ entry.pdf }}">
  {% endif %}
{% endcapture %}
{% assign page.head_extra = head_extra %}

<div class="page-content">
  <div class="wrapper">
    <div class="post">

      <header class="post-header">
        <h1 class="post-title">{{ entry.title }}</h1>
        <p class="post-meta">
          {% for author in entry.author_array %}
            {{ author.first }} {{ author.last }}{% unless forloop.last %}, {% endunless %}
          {% endfor %}
          <br>
          <strong>{{ entry.booktitle }}</strong>, {{ entry.year }}
        </p>
      </header>

      <div class="post-content">
        {% if entry.abstract %}
          <h3>Abstract</h3>
          <p>{{ entry.abstract }}</p>
        {% endif %}

        <h3>Links</h3>
        <ul>
          {% if entry.pdf %}
            <li><a href="{{ entry.pdf }}" target="_blank">[PDF]</a></li>
          {% endif %}
          {% if entry.html %}
            <li><a href="{{ entry.html }}" target="_blank">[Project Page]</a></li>
          {% endif %}
          {% if entry.code %}
            <li><a href="{{ entry.code }}" target="_blank">[Code]</a></li>
          {% endif %}
          {% if entry.video %}
            <li><a href="{{ entry.video }}" target="_blank">[Video]</a></li>
          {% endif %}
          {% if entry.slides %}
            <li><a href="{{ entry.slides }}" target="_blank">[Slides]</a></li>
          {% endif %}
        </ul>

        <h3>BibTeX</h3>
        <pre><code>@{{ entry.type }}{ {{ entry.key }},
{% for field in entry.fields %}
  {{ field[0] }} = { {{ field[1] }} },
{% endfor %}
}</code></pre>
      </div>

    </div>
  </div>
</div>
